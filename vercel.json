{
  "version": 2,
  "builds": [
    {
      "src": "apps/client/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/quizes/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/quizes/(.*)",
      "dest": "apps/quizes/$1"
    },
    {
      "src": "/(.*)",
      "dest": "apps/client/$1"
    }
  ],
  "functions": {
    "apps/client/pages/api/*.js": {
      "maxDuration": 30
    },
    "apps/quizes/pages/api/*.js": {
      "maxDuration": 30
    }
  }
}
